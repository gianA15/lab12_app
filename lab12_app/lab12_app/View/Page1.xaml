<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab12_app.View.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Ingresar Base"
                   Text="{Binding ValorA}"
                   ></Entry>
            <Entry Placeholder="Ingresar Altura"
                   Text="{Binding ValorB}"
                   ></Entry>

            <Button Text="Area"
                    Command="{Binding CalcularArea}"
                    />
            <Button Text="Perimetro"
                    Command="{Binding CalcularPerimetro}"
                    />

            <Label  Text="{Binding ResultadoArea}"
                    FontSize="50"
                    />
            <Label  Text="{Binding ResultadoPerimetro}"
                    FontSize="50"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>